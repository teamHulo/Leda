<div class="my-testimonial">
  <img src="{{ section.settings.bg |img_url: 'master' }}"/>
  <div class="container">
    <div class="testimonial__wrap">
      <div class="name">
        <span>
          {{section.settings.name}}
        </span>
      </div>
      <div class="swiper swiper-testimonial">
        <div class="swiper-wrapper">
         {%for block in section.blocks %}
          <div class="swiper-slide">
             <div class="swiper-slide__wrap">
               <div class="testi-foto">
                  <img src="{{ block.settings.img |img_url: 'master' }}"/>
               </div>
                <div class="rating">
                  {% for i in (1..block.settings.range)%}
                    {%render 'icon-star'%}
                  {%endfor%}
                </div>
                <div class="small-text">
                  <p>
                    {{block.settings.text}}
                  </p>
                </div>
                <div class="small-text text-name">
                  <p>
                    {{block.settings.name}}
                  </p>
                </div>
             </div>
          </div>
         {% endfor %}
          
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-scrollbar-wrap">
          <div class="swiper-scrollbar"></div>
        </div>
        
      </div>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Section my-testimonial",
     "settings": [
        {
               "type": "image_picker",
               "id": "bg",
               "label": "background img"
        },
       {
            "type": "text",
            "id": "name",
            "label": "name",
            "default" : "leda swiss"
        }

      
    ],
    "blocks": [
     {
       "name": "item",
       "type": "item",
       "settings": [
            {
                 "type": "image_picker",
                 "id": "img",
                 "label": "img"
              },
             {
                "type": "range",
                "id": "range",
                "min": 1,
                "max": 5,
                "step": 1,
                "unit": "px",
                "label": "rating",
                "default": 5
              },
             {
               "type": "text",
               "id": "text",
               "label": "text"
             },
             {
               "type": "text",
               "id": "name",
               "label": "name"
             }
           ]
         }
    ],
     "presets": [
    {
      "name": "Section my-testimonial"
    }
  ]
  }
{% endschema %}