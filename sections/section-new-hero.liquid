 <div class="section-new-hero">
      <div class="container">
        <div class="section-new-hero__wrap">
          <div class="section-new-hero-top">
            <div class="left">
              <div class="left__wrap">
                  <div class="title">
                    <h2>
                      {{ section.settings.title_left }}
                    </h2>
                  </div>
              </div>
            </div>
            <div class="middle">
              <div class="middle__wrap">
                  <div class="image">
                    <img src="{{ section.settings.img | img_url: 'master' }}" alt="" width="" height="">
                  </div>
              </div>
            </div>
            <div class="right">
              <div class="right__wrap">
                  <div class="title">
                    <h2>
                      {{ section.settings.title_right }}
                    </h2>
                  </div>
              </div>
            </div>
          </div>
          <div class="section-new-hero-bottom">
            <div class="text">
              {{ section.settings.text}}
            </div>
          </div>
        </div>
      </div>
     </div>
