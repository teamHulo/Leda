<div class="section-insta">
  <div class="container">
    <div class="section-insta__wrap">
      <div class="insta-social">
        {%- assign social_accounts = 'Facebook, Twitter, Tiktok, Pinterest, Instagram, Snapchat, Tumblr, Linkedin, YouTube, Vimeo, Medium, ' | split: ', ' -%}
          {%- for social in social_accounts -%}
            {%- assign social_handle = social | handleize -%}
            {% capture social_link %}social_{{ social_handle }}_link{% endcapture %}
        
            {%- if settings[social_link] != blank -%}
              <a class="footer__icon footer__icon--social" href="{{ settings[social_link] }}" title="{{ social }}" target="_blank">
                {% render 'social-icon' handle: social_handle %}
                <span class="visually-hidden">{{ social }}</span>
              </a>
            {%- endif -%}
          {%- endfor -%}
      </div>
      <div class="title">
        <h2>
          {{section.settings.title}}
        </h2>
      </div>
      <div class="text">
       
          {{section.settings.text}}
        
      </div>
       <div class="swiper insta-swiper">
        <div class="insta-list swiper-wrapper">
          {%for block in section.blocks%}
          <div class="insta-item swiper-slide">
            <div class="insta-item__wrap">
              <div class="insta-img">
                <img src="{{block.settings.img | img_url : 'master'}}" alt="">
              </div>
              <div class="insta-icons">
                {%render 'icon-like'%}
                {%render 'icon-comment'%}
                {%render 'icon-share-my'%}
                {%render 'icon-save'%}
              </div>
            </div>
          </div>
          {%endfor%}
        </div>
        <div class="swiper-scrollbar-wrap">
          <div class="swiper-scrollbar"></div>
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Section section-insta",
     "settings": [
       {
            "type": "text",
            "id": "title",
            "label": "title"
        },
       {
            "type": "richtext",
            "id": "text",
            "label": "subtitle"
        }
       

      
    ],
    "blocks": [
     {
       "name": "item",
       "type": "item",
       "settings": [
             {
               "type": "image_picker",
               "id": "img",
               "label": "image"
             }
           ]
         }
    ],
     "presets": [
    {
      "name": "Section section-insta"
    }
  ]
  }
{% endschema %}